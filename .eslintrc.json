{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "xo"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "warn",
            2
        ],
        "new-cap": "off",
        "max-len": [
            "warn",
            120
        ],
        "object-curly-spacing": ["warn", "always"]

    }
}